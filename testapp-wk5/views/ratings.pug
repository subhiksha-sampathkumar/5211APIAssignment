extends layout 

block main-content 
  header#header 
      .header-content   
        h2#site-name 
          a(href="/") Recipes Page 
  h1.page-title Hello! Here's a list of nutrition information for #{recipe.title}
  ul 
    each item in movieList.nutrients
      li 
          #{item.name} #{item.name} #{item.amount} #{item.unit} #{item.percentOfDailyNeeds}